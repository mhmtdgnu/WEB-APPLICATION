@using WebApplication2.Models.Entity
@model  List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<title>Personeller</title>
<br />
<h2>Personeller</h2>
<br />

<table class="table table-striped">
    @*Tablo üst rengi*@
    <tr style="background-color:#ff6a00">
        <th>PERSONEL ID</th>
        <th>PERSONEL ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.ID</td>
            <td>@prs.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/@prs.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@prs.ID" class="btn btn" style="background-color: #062f4d; color:white;">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-success">Yeni Personel Ekle</a>
