@model WebApplication2.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<title>Üye Güncelle</title>
<br />
<h2>Üye Güncelle</h2>

@using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        @*@Html.LabelFor(k => k.PERSONEL)*@
        <label>Üye Adı</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })

        <br />
        <label>Üye Soyadı</label>
        @Html.TextBoxFor(k => k.SOYAD, new { @class = "form-control" })

        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(k => k.KULLANICIADI, new { @class = "form-control" })

        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(k => k.SIFRE, new { @class = "form-control" })

        <br />
        <label>e-Mail Adresi</label>
        @Html.TextBoxFor(k => k.MAIL, new { @class = "form-control" })

        <br />
        <label>Okul</label>
        @Html.TextBoxFor(k => k.OKUL, new { @class = "form-control" })

        <br />
        <label>Telefon</label>
        @Html.TextBoxFor(k => k.TELEFON, new { @class = "form-control" })

        <br />
        <label>Fotoğraf</label>
        @Html.TextBoxFor(k => k.FOTOGRAF, new { @class = "form-control" })
        <br />

    </div>
    <div>
        <button class="btn btn" style="background-color: #062f4d; color: white;">Güncelle</button>
    </div>
}


