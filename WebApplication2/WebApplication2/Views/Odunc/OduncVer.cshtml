@model WebApplication2.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<script type="text/javascript">
    function validateForm() {
        var isValid = true;

        var kitapId = document.getElementById('KitapId').value; // DropDownListFor'un ID'si
        if (kitapId == null || kitapId == '') {
            alert('Lütfen bir kitap seçiniz');
            isValid = false;
        }

        var uyeId = document.getElementById('UyeId').value;
        if (uyeId == null || uyeId == '') {
            alert('Lütfen bir üye seçiniz');
            isValid = false;
        }
        var personelId = document.getElementById('PersonelId').value;
        if (personelId == null || personelId == '') {
            alert('Lütfen bir personel seçiniz');
            isValid = false;
        }

        return isValid;
    }
</script>
<title>Ödünç Verme</title>
<br />
<h2>Ödünç Verme</h2>
<form class="form-group" method="post" onsubmit="return validateForm()">

    <div></div>
    <div style="margin-top:15px">
        <label>Üye Adı</label>
        @Html.DropDownListFor(k => k.TBLUYELER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control", id = "UyeId" })
    </div>

    <div style="margin-top:15px">
        <label>Kitap Adı</label>
        @Html.DropDownListFor(k => k.TBLKITAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control", id = "KitapId" })

    </div>

    <div style="margin-top:15px">
        <label>Personel Adı</label>
        @Html.DropDownListFor(k => k.TBLPERSONEL.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control", id = "PersonelId" })
    </div>

    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIHI" value="@DateTime.Now.ToShortDateString()" />
    </div>

    <div style="margin-top:15px">
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIHI" value="@DateTime.Now.AddDays(30).ToShortDateString()" />
    </div>


    <div style="margin-top:15px">
        <button class="btn btn-danger">Kitap Ödünç Ver</button>
        <input type="hidden" value="False" name="ISLEMDURUM" />
    </div>
</form>


