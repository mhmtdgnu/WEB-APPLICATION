@using WebApplication2.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@{
    var listem = ViewBag.uye as List<TBLUYELER>;
    var listem1 = ViewBag.kitap as List<TBLKITAP>;
    var listem2 = ViewBag.personel as List<TBLPERSONEL>;

}

<title>Ödünç Listesi</title>
<br />
<h2>Ödünç Listesi</h2>
<table class="table table-striped">
    @*Tablo üst rengi*@
    <tr style="background-color:#ff6a00">
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            @foreach (var a in listem1)
            {
                if (a.ID == k.KITAP)
                {
                    <td>@a.AD</td>
                    break;
                }
            }
            @foreach (var a in listem)
            {
                if (a.ID == k.UYE)
                {
                    <td>@a.AD  @a.SOYAD</td>
                    break;
                }
            }
            @foreach (var a in listem2)
            {
                if (a.ID == k.UYE)
                {
                    <td>@a.PERSONEL</td>
                    break;
                }
            }

            <td>@Convert.ToDateTime(k.ALISTARIHI).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.IADETARIHI).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/Odunciade/@k.ID" class="btn btn-default" style="background-color:#ff6a00; color:white">Kitabı İade Et</a></td>
        </tr>
    }
</table>


